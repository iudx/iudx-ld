{
    "$schema": "http://json-schema.org/schema#",
    "id": "https://raw.githubusercontent.com/iudx/iudx-ld/master/base_schemas/v0.0.0/core_defs.json",
    "title": "IUDX-LD meta model definitions ",
    "description": "IUDX-LD meta-model",
    "type": "object",
    "definitions": {
        "Property": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["Property"]
                        },
                        "value": {
                            "type": [
                                "string",
                                "number",
                                "boolean",
                                "array",
                                "object"
                            ]
                        },
                        "additionalProperties": {
                            "anyOf": [
                                {
                                    "$ref": "#/definitions/Relationship"
                                },
                                {
                                    "$ref": "#/definitions/Property"
                                }
                            ]
                        }
                    },
                    "required": [ "type", "value" ]
                },
                {
                    "type": [ "string", "number", "boolean" ]
                }
            ]
        },
        "QuantitativeProperty": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["Property"]
                        },
                        "value": {
                            "type": [ "string", "number", "boolean", "array", "object" ]
                        },
                        "unitCode": {
                           "$ref": "miscSchemaOrgDefs.json#/definitions/unitCode"
                        },
                        "unitText": {
                           "$ref": "miscSchemaOrgDefs.json#/definitions/unitText"
                        },
                        "minValue": {
                           "$ref": "miscSchemaOrgDefs.json#/definitions/minValue"
                        },
                        "maxValue": {
                           "$ref": "miscSchemaOrgDefs.json#/definitions/maxValue"
                        },
                        "additionalProperties": {
                            "anyOf": [
                                {
                                    "$ref": "#/definitions/Relationship"
                                },
                                {
                                    "$ref": "#/definitions/Property"
                                }
                            ]
                        }
                    },
                    "required": [ "type", "value" ]
                },
                {
                    "type": [ "string", "number", "boolean" ]
                }
            ]
        },
        "TimeProperty": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["TimeProperty"]
                        },
                        "value": {
                            "type":  "string"
                        }
                    }
                },
                {
                    "type": "string"
                }
            ]
        },
        "Relationship": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["Relationship"]
                },
                "object": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "type",
                "object"
            ],
            "additionalProperties": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/Property"
                    },
                    {
                        "$ref": "#/definitions/Relationship"
                    }
                ]
            }
        },
        "GeoProperty": {
            "oneOf": [
                {

                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["GeoProperty"]
                        },
                        "value": {
                            "$ref": "https://raw.githubusercontent.com/iudx/iudx-ld/master/base_schemas/v0.0.0/geometry-schema.json#"
                        },
                        "observedAt": {
                            "$ref": "#/definitions/TimeProperty"
                        },
                        "createdAt": {
                            "$ref": "#/definitions/TimeProperty"
                        },
                        "modifiedAt": {
                            "$ref": "#/definitions/TimeProperty"
                        }
                    },
                    "required": [
                        "type",
                        "value"
                    ]
                },
                {
                    "type": ["string","number"]
                }
            ]
        },
        "loc": {
           "allOf": [{"#/definitions/GeoProperty"}],
           "type": "object",
           "properties": {
              "value": {
                  "type": "object",
                  "properties": {
                      "type": {
                         "type": "string",
                         "enum": ["Point"]
                      }
                  }
              }
           }
        }
    }
}
