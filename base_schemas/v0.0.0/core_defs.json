{
    "$schema": "http://json-schema.org/schema#",
    "id": "https://raw.githubusercontent.com/iudx/iudx-ld/master/base_schemas/v0.0.0/core_defs.json",
    "title": "IUDX-LD meta model definitions ",
    "description": "IUDX-LD meta-model",
    "type": "object",
    "definitions": {
        "Property": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["Property"]
                        },
                        "value": {
                            "type": [
                                "string",
                                "number",
                                "boolean",
                                "array",
                                "object"
                            ]
                        },
                        "additionalProperties": {
                            "anyOf": [
                                {
                                    "$ref": "#/definitions/Relationship"
                                },
                                {
                                    "$ref": "#/definitions/Property"
                                },
                                {
                                    "$ref": "common_defs.json#/definitions/unitCode"
                                },
                                {
                                    "$ref": "common_defs.json#/definitions/unitText"
                                },
                                {
                                    "$ref": "common_defs.json#/definitions/minValue"
                                },
                                {
                                    "$ref": "common_defs.json#/definitions/maxValue"
                                }

                            ]
                        }
                    },
                    "required": [
                        "type",
                        "value"
                    ]
                },
                {
                    "type": [
                        "string",
                        "number",
                        "boolean"
                    ]
                }
            ]
        },
        "TimeProperty": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["TimeProperty"]
                        },
                        "value": {
                            "type":  "string"
                        }
                    }
                },
                {
                    "type": "string"
                }
            ]
        },
        "Relationship": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["Relationship"]
                },
                "object": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "type",
                "object"
            ],
            "additionalProperties": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/Property"
                    },
                    {
                        "$ref": "#/definitions/Relationship"
                    }
                ]
            }
        },
        "GeoProperty": {
            "oneOf": [
                {

                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["GeoProperty"]
                        },
                        "value": {
                            "$ref": "https://raw.githubusercontent.com/iudx/iudx-ld/master/base_schemas/v0.0.0/geometry-schema.json#"
                        },
                        "observedAt": {
                            "$ref": "#/definitions/TimeProperty"
                        },
                        "createdAt": {
                            "$ref": "#/definitions/TimeProperty"
                        },
                        "modifiedAt": {
                            "$ref": "#/definitions/TimeProperty"
                        }
                    },
                    "required": [
                        "type",
                        "value"
                    ]
                },
                {
                    "type": ["string","number"]
                }
            ]
        },
        "unitCode": {
            "allOf": [{"$ref": "https://raw.githubusercontent.com/iudx/iudx-ld/master/base_schemas/v0.0.0/core_defs.json#/definitions/Property"}],
            "type": "string",
            "describes": "Identifier/Code for Unit of measurement as defined by the UN/CEFACT. Also used by schema.org (https://schema.org/unitCode). A detailed list of codes is provided at http://www.unece.org/fileadmin/DAM/cefact/recommendations/rec20/rec20_Rev9e_2014.xls",
            "sameAs": ["https://schema.org/unitCode","http://purl.org/goodrelations/v1#hasUnitOfMeasurement"]
        },
        "unitText": {
            "allOf": [{"$ref": "https://raw.githubusercontent.com/iudx/iudx-ld/master/base_schemas/v0.0.0/core_defs.json#/definitions/Property"}],
            "type": "string",
            "describes": "A string to describe a unit of measurement. May be useful when a unit code for a unit is not available. Can also be used to describe the unit Code textually.",
            "sameAs": ["https://schema.org/unitText"]
        },
        "minValue": {
            "allOf": [{"$ref": "https://raw.githubusercontent.com/iudx/iudx-ld/master/base_schemas/v0.0.0/core_defs.json#/definitions/Property"}],
            "type": "number",
            "describes": "The lower numeric limit of the described quantitative property.",
            "sameAs": ["https://schema.org/minValue","http://purl.org/goodrelations/v1#hasMinValue"]
        },
        "maxValue": {
            "allOf": [{"$ref": "https://raw.githubusercontent.com/iudx/iudx-ld/master/base_schemas/v0.0.0/core_defs.json#/definitions/Property"}],
            "type": "number",
            "describes": "The upper numeric limit of the described quantitative property.",
            "sameAs": ["https://schema.org/maxValue","http://purl.org/goodrelations/v1#hasMaxValue"]
        }
    }
}
