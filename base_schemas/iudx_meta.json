{
    "$schema": "http://json-schema.org/schema#",
    "id": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_meta.json",
    "title": "IUDX-LD meta-model definitions",
    "description": "IUDX-LD meta-model",
    "definitions": {
        "Property": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "Property"
                        },
                        "value": {
                            "type": [
                                "string",
                                "number",
                                "boolean",
                                "array",
                                "object"
                            ]
                        },
                        "additionalProperties": "false",
                    "required": [
                        "type",
                        "value"
                    ]
                }
            ]
        },
        "TimeProperty": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "TimeProperty"
                },
                "value": {
                    "type":  "string",
                    "format": "date-time"
                }
            }
        },
        "Relationship": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "Relationship"
                },
                "object": {
                    "type": "string",
                    "format": "uri"
                },
                "observedAt": {
                    "$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_common.json#/definitions/observedAt"
                },
                "createdAt": {
                    "$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_common.json#/definitions/createdAt"
                },
                "modifiedAt": {
                    "$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_common.json#/definitions/modifiedAt"
                }
            },
            "required": [
                "type",
                "object"
            ],
            "additionalProperties": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/Property"
                    },
                    {
                        "$ref": "#/definitions/Relationship"
                    }
                ]
            }
        },
        "GeoProperty": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "GeoProperty"
                },
                "value": {
                    "$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/geometry-schema.json#"
                },
                "observedAt": {
                    "$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_common.json#/definitions/observedAt"
                },
                "createdAt": {
                    "$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_common.json#/definitions/createdAt"
                },
                "modifiedAt": {
                    "$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_common.json#/definitions/modifiedAt"
                }
            },
            "required": [
                "type",
                "value"
            ]
        }
    }
}
