{
    "@context": {
        "xsd": "http://www.w3.org/2001/XMLSchema#",
        "uo": "http://units.open.org/"
    },
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "describes": "Air Quality Base dataModel for AQM sensors deployed in Pune City.",
    "properties": {
        "location": {
            "describes": "Physical location of the AQM sensor", 
            "$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_meta.json#/definitions/GeoProperty"
        },
        "deviceModelInfo": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "Property"
                },
                "value": {
                    "$ref":"https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/miscSchemaOrgDefs.json#/definitions/product"
                }
            }
        },
        "AIR_PRESSURE": {
            "$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_meta.json#/definitions/Property",
            "describes": "Measured Air pressure",
            "units": "atm"
        },
        "AQI": {
            "type": "object",
            "allOf": [ {"$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_meta.json#/definitions/Property"}],
            "properties": {
                "value": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 1000
                }
            },
            "describes": "Overall AQI ",
            "units": "dimensionless"
        },
        "AQI_POLLUTANT": {
            "type": "object",
            "allOf": [ {"$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_meta.json#/definitions/Property"}],
            "describes": "Major pollutant in the AQI index.",
            "properties": {
                "value": {
                    "type": "string",
                    "enum": [ "CO", "SO2", "NO", "NO2", "PM_10", "PM2_5", "OZONE"]
                }
            }
        }
    }
}
