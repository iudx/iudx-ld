{
    "@context": [
        "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_core_context.json",
       {
            "xsd": "http://www.w3.org/2001/XMLSchema#",
            "uo": "http://units.open.org/",
            "AQI_POLLUTANT": {
                "@id": "https://raw.githubusercontent.com/rraks/iudx-ld/master/data_models/aqm.json#/properties/AQI_POLLUTANT"
            },
            "AQI": {
                "@id": "https://raw.githubusercontent.com/rraks/iudx-ld/master/data_models/aqm.json#/properties/AQI",
                "@type": ""
            }

        }
     ],
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "describes": "Air Quality Base dataModel for AQM sensors deployed in Pune City.",
    "properties": {
        "productDescription": {
            "$ref":  "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/miscSchemaOrgDefs.json#/definitions/product"
        },
        "AQI": {
            "describes": "Overall AQI ",
            "units": "dimensionless",
            "valueSchema": {
                "type": "number",
                "minimum": 0,
                "maximum": 1000
            },
            "oneOf": [
                {
                    "allOf": [ {"$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_meta.json#/definitions/Property"}],
                    "type": "object",
                    "properties": {
                        "value": {
                            "$ref": "#/properties/AQI/valueSchema"
                        }
                    }
                },
                {
                    "allOf": [ {"$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_meta.json#/definitions/Property"}],
                    "type": "number",
                    "$ref": "#/properties/AQI/valueSchema"
                }
            ]
        },
        "AQI_POLLUTANT": {
            "type": "object",
            "allOf": [ {"$ref": "https://raw.githubusercontent.com/rraks/iudx-ld/master/base_schemas/iudx_meta.json#/definitions/Property"}],
            "describes": "Major pollutant in the AQI index.",
            "properties": {
                "value": {
                    "type": "string",
                    "enum": [ "CO", "SO2", "NO", "NO2", "PM_10", "PM2_5", "OZONE"]
                }
            }
        }
    }
}
